<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/etCurrent"
        android:hint="@string/hint"
        android:inputType="number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <Spinner
        android:id="@+id/spinnerOne"
        android:layout_width="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toStartOf="@id/spinnerTwo"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etCurrent"
        />
    <Spinner
        android:id="@+id/spinnerTwo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@+id/etCurrent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/spinnerOne"
        />
    <ImageView
        android:id="@+id/imgCurrent"
        android:src="@drawable/arrows"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/spinnerTwo"
        app:layout_constraintBottom_toBottomOf="@id/spinnerTwo"
        app:layout_constraintStart_toEndOf="@+id/spinnerOne"
        app:layout_constraintEnd_toStartOf="@+id/spinnerTwo"
        app:layout_constraintTop_toBottomOf="@+id/etCurrent"/>
    <TextView
        android:id="@+id/twCurrent"
        android:text="@string/result"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/spinnerTwo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>